<p id="notice"><%= notice %></p>

<h1>List Of Devices</h1>

<table class="container">
  <thead>
    <tr>
      <th>Device code</th>
      <th>Name</th>
      <th>Price</th>
      <th>Vendor</th>
      <th>Status</th>
      <th>Location</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.id_code %></td>
        <td><%= device.name %></td>
        <td><%= device.price %></td>
        <td><%= device.vendor %></td>
        <td><%= device.status %></td>
        <td><%= device.location %></td>
        <td><%= device.date %></td>


        <td class="list_actions">
          <dd> <%= link_to 'Show', device %> </dd>
          <dd> <%= link_to 'Edit', edit_device_path(device) %></dd>
          <dd> <%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %> </dd>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

