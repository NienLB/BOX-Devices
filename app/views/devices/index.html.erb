<div class="container">
<p id="notice"><%= notice %></p>

<h1>List Of Devices</h1>
<div class="list">
<table class="container table">
  <thead>
    <tr>
      <th>Device code</th>
      <th>Name</th>
      <th>Price</th>
      <th>Vendor</th>
      <th>Status</th>
      <th>Location</th>
      <th>Category</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.id_code %></td>
        <td><%= device.name %></td>
        <td><%= number_to_currency(device.price ,precision:0, unit: "vnd", separator: ",", delimiter: ".", format: "%n %u") %></td>
        <td><%= device.vendor_name %></td>
        <td id='img_check'>
              <%= display_status(device.status_name)%></td>
        <td><%= device.location %></td>
        <td><%= device.category_name %></td>
        <td><%= device.date %></td>


        <td class="list_actions">
          <dd> <%= link_to 'Show', device %> </dd>
          <dd> <%= link_to 'Edit', edit_device_path(device) %></dd>
          <dd> <%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %> </dd>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Device', new_device_path %>
</div>